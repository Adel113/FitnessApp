<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000"> <!-- Fond noir -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:clipToPadding="false"
        android:weightSum="1">


        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bienvenue dans l'outil de recherche alimentaire. Entrez le nom d'un aliment pour obtenir des informations nutritionnelles détaillées."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/food_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Entrez un exercice"
                android:background="#ffffff"
                android:backgroundTint="@color/white"
                android:textColor="@android:color/black"
                android:padding="16dp"
                android:textSize="16sp"
                android:importantForAccessibility="yes"/>

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rechercher"
                android:textAllCaps="false"
                android:importantForAccessibility="yes"
                android:layout_marginLeft="16dp"
                android:backgroundTint="@color/white"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewApi"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:padding="16dp"
            android:scrollbars="vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDatabase"
            android:layout_width="349dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:padding="16dp"
            android:scrollbars="vertical"
            android:layout_weight="5"/>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/progressbar.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fond de la ProgressBar -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Couleur de fond (gris clair) -->
            <corners android:radius="8dp"/>  <!-- Coins arrondis -->
        </shape>
    </item>

    <!-- Progrès de la ProgressBar -->
    <item android:left="0dp" android:right="0dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#FF6200EE"/> <!-- Couleur du progrès (ex : violet de base) -->
            <corners android:radius="8dp"/>  <!-- Coins arrondis -->
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"

    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:clipToPadding="false">


    <TextView
        android:id="@+id/programmeNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Nom du Programme"
        android:background="@drawable/border_radiustext"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/programmeDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Description du Programme"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:gravity="center"  />

    <!-- Liste des jours et exercices -->
    <TextView

        android:id="@+id/joursList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jours et Exercices"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        />

</LinearLayout>